package com.mvc.dao;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.util.ArrayList;

import com.mvc.bean.AdivsorBean;
import com.mvc.util.DBConnection;

public class AdvisorDao
{
	public ArrayList<AdivsorBean> getAdvisorInformation(String s_id)
	{
		ArrayList<AdivsorBean> std = new ArrayList<AdivsorBean>();
		Connection con = null;
		ResultSet resultSet = null;
		PreparedStatement ps = null;
		try
		{
			con = DBConnection.createConnection();
			String query = "select s_id, i_id, name" +
						   "from adivsor inner join instructor " +
						   "on advisor.i_id = instructor.ID" +
						   "where adivsor.s_id = ?";
			ps = con.prepareStatement(query);
			ps.setString(1, s_id);
			resultSet = ps.executeQuery();

			String studentID, adivsorID, name;
			while(resultSet.next())
			{
				studentID = resultSet.getString("s_id");
				adivsorID = resultSet.getString("i_id");
				name = resultSet.getString("name");
				std.add(new AdivsorBean(studentID, name, adivsorID));
				System.out.println(std);
				System.out.println(studentID + " " + adivsorID + " " + name);
			}
		} catch (SQLException e)
		{
			e.printStackTrace();
		}
		return std;
	}
}
